<section id="home-section">
    <div class="container">
      <div class="row clearfix">
         
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"> 
          <!-- .form-subscribe -->
          <div class="form-subscribe">
            <div class="form-subscribe-content">
              <h4>Sign In!</h4>
              <div id="message"></div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>

              <%= devise_error_messages! %>
                
                 <div class="form-group">
                  <div class="col-sm-12">
                    <input type="email" class="form-control" id="user_email" name="user[email]" placeholder="Your email">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <input type="password" class="form-control" id="user_password" name="user[password]" placeholder="Password">
                  </div>
                </div>
                
                <div class="form-group">
                  <div class="div-center col-sm-12">
                    <p class="text-left">
                      <button type="submit" id="SendButton" name="submit" class="btn btn-action btn-success btn-lg"><strong>Sign In</strong></button>
                    </p>
                    <p class="text-left">
                      <%= render "devise/shared/links" %>                 
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- /.form-subscribe --> 
        </div>
      </div>
    </div>
  </section>



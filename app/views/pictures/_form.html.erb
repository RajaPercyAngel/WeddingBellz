<%= form_for(@picture, :html => {:multipart => :true}) do |f| %>
  
  
  <p class="required">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p class="buttons">
    <%= f.submit "submit" %>
    <%= link_to_function 'Cancel', "$(this).parent('form').remove()" if request.xhr? %>
  </p>
<% end %>
